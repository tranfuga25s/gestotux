 <querysource>
  <name>datos</name>
  <sql>SELECT cc.numero_cuenta,
       c.razon_social,
       cc.saldo
FROM `ctacte` AS cc, `clientes` AS c
WHERE cc.id_cliente = c.id 
  AND cc.saldo > 0
ORDER BY c.razon_social;</sql>

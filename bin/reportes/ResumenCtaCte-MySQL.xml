 <querysource>
  <name>resumen</name>
  <sql>SELECT DATE_FORMAT( fecha, '%d/%m/%Y' ) AS fecha,
       descripcion,
       CASE tipo_op WHEN 0 THEN 'R'
	         WHEN 1 THEN 'F'
	         WHEN 2 THEN 'NC'
	         WHEN 3 THEN 'ND'
	         WHEN 4 THEN 'CS'
	         WHEN 5 THEN 'RCS'
	         WHEN 6 THEN 'FA'
	 END AS Tipo,
        debe,
        haber,
        @saldo := @saldo - haber + debe AS saldo
FROM item_ctacte
WHERE id_ctacte = &lt;? value( "ctacte" ) ?>;</sql>
 </querysource>
 <querysource>
  <name>datos</name>
  <sql>SELECT CONCAT( '#', cc.numero_cuenta ) AS numero_cuenta,
       c.razon_social AS razon_social,
       DATE_FORMAT( cc.fecha_alta, '%d/%m/%Y' ) AS fecha_alta,
       cc.saldo AS saldo,
       cc.limite AS limite
FROM ctacte AS cc, clientes AS c
WHERE cc.id_cliente = c.id AND cc.numero_cuenta = &lt;? value( "ctacte" ) ?></sql>
 </querysource>
 <querysource>
  <name>primera</name>
  <sql>SET @saldo:=0;</sql>
 </querysource>

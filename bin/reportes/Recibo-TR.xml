 <querysource>
  <name>recibo</name>
  <sql>SELECT r.id_recibo AS numero,
       LPAD( r.numero, 5, 0 ) AS NumSerie,
       DATE_FORMAT( r.fecha_pago, "%d/%c/%Y" ) AS fecha,
       r.texto AS contenido,
       r.precio AS total,
       c.calle AS direccion,
       c.razon_social AS cliente,
       c.`CUIT/CUIL` AS cuit
FROM recibos AS r,
     clientes AS c
WHERE r.id_recibo = &lt;? value("id_recibo") ?> AND c.id = r.id_cliente;</sql>

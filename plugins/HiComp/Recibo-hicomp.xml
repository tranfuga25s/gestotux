 <querysource>
  <name>recibo-hicomp</name>
  <sql>SELECT r.id_recibo AS numero,
       CONCAT( CONCAT( LPAD( r.serie, 5, 0 ), '-' ), LPAD( r.numero, 5, 0 ) ) AS NumSerie,
       DATE_FORMAT( r.fecha_pago, '%d  %m  %y' ) AS fecha,
       r.texto AS contenido,
       r.precio AS total,
       CONCAT( CONCAT( c.calle, CONCAT( ' ', c.numero ) ) ) AS direccion,
       c.razon_social AS cliente,
       c.`CUIT/CUIL` AS cuit
FROM recibos AS r,
     clientes AS c
WHERE r.id_recibo = &lt;? value("id_recibo") ?> AND c.id = r.id_cliente;</sql>
